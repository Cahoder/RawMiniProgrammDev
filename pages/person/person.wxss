/* pages/person/person.wxss */
.container{
  width: 100%;
  background-color: white;
}
.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 10rpx solid wheat;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.tab {
  width: 90%;
  color: #aaa;
  font-size: 30rpx;
  background-color: white;
  padding:25rpx 0rpx; 
  border-bottom:2px solid #EFEFF3;
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.icon_to{
  width: 45rpx;
  height: 45rpx;
  color-interpolation-filters: #aaa;
}